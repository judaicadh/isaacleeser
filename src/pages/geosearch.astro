---
import BaseLayout from "../layouts/BaseLayout.astro";
import GeoSearch from "../components/GeoSearch";
---

<BaseLayout title="GeoSearch" description="Explore items by place">
    <section class="py-8 bg-white dark:bg-gray-900 md:py-16 antialiased">
        <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
            <a
                    href="/"
                    class="block mb-2 text-xs font-medium text-ink-muted opacity-70 hover:opacity-100 hover:underline transition"
            >
                ‚Üê Return to text search
            </a>
            <h1 class="text-3xl font-serif text-gray-900 dark:text-gray-100 mb-6">
                Explore by Place
            </h1>
            <GeoSearch client:only="react" />
        </div>
    </section>
</BaseLayout>